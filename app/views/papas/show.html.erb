<%= render "shared/header" %>

<h1>パパリスト</h1>

<div>
  あなたが担当するパパ達を管理しませんか
</div>

<div>
  <%= link_to "パパを追加する", new_papa_path %>
</div>

  <% @papas.each do |papa| %>
  ----------------------------------------
    <ul>
      <div>
        <% if papa.image.present? %>
          <%= image_tag papa.image.variant(resize: '150x150') %>
        <% end %>
      </div>
      <div>
        <%= "#{papa.name}さんの情報"%>
      </div>
      <div>
        <%= "#{papa.age.name}" %>
      </div>
      <div>
        <%= "#{papa.marriage.name}" %>
      </div>
      <div>
        <%= "#{papa.child.name}" %>
      </div>
      <div>
        <%= "#{papa.memo}" %>
      </div>
    </ul>
  <% end %>
