<% if user_signed_in? && current_user.id == @profile.user.id %>
  <div>
    あなたのプロフィール
  </div>
  <div>
    <%= link_to '作成する',  new_profile_path, method: :get %>
  </div>
  <div>
    <%= link_to '編集する', edit_profile_path, method: :get %>
  </div>

<% else %>
  <div>
    <%= "#{@profile.user.nickname}さんのプロフィール" %>
  </div>
<% end %>

<%# プロフィールがない場合 %>
