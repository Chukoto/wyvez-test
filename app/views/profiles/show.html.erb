<h4>パパ活歴</h4>
  <div>まだ登録されていません</div>

<h4>プロフィール</h4>
  <div>プロフィールがありません</div>
<%#// プロフィールがない場合 %>
<% else %>
<%# プロフィールがある場合 %>
<h4>性転換歴</h4>
  <div><%= @profile.trans_exp.name %></div>

<h4>パパ活歴</h4>
  <div><%= @profile.papa_exp.name %></div>

<h4>プロフィール</h4>
  <div><%= @profile.text %></div>
<% end %>
